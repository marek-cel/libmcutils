{
    "version": 3,
    "configurePresets": [
        {
            "name": "linux-common",
            "hidden": true,
            "binaryDir": "${sourceDir}/build",
            "generator": "Unix Makefiles",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "linux-debug",
            "inherits": "linux-common",
            "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
        },
        {
            "name": "linux-release",
            "inherits": "linux-common",
            "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
        },
        {
            "name": "windows-common",
            "hidden": true,
            "binaryDir": "${sourceDir}/build",
            "generator": "Visual Studio 17 2022",
            "architecture": "x64",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "windows-debug",
            "inherits": "windows-common",
            "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
        },
        {
            "name": "windows-release",
            "inherits": "windows-common",
            "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
        }
    ],
    "buildPresets": [
        {
            "name" : "linux-common",
            "targets": ["all"]
        },
        {
            "name" : "windows-common",
            "targets": ["ALL_BUILD"]
        },
        {
            "name": "linux-debug",
            "inherits": "linux-common",
            "configurePreset": "linux-debug",
            "configuration": "Debug"
        },
        {
            "name": "linux-release",
            "inherits": "linux-common",
            "configurePreset": "linux-release",
            "configuration": "Release"
        },
        {
            "name": "windows-debug",
            "inherits": "windows-common",
            "configurePreset": "windows-debug",
            "configuration": "Debug"
        },
        {
            "name": "windows-release",
            "inherits": "windows-common",
            "configurePreset": "windows-release",
            "configuration": "Release"
        }
    ]
}